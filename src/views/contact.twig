{% extends 'base.twig' %}

{% block content %}
<h1>{{ translations['contact_us'] }}</h1>
{% if error %}
    <div class="alert alert-danger">{{ error }}</div>
{% endif %}
<form action="/contact-process" method="POST">
    <div class="form-group">
        <label for="name">{{ translations['name'] }}</label>
        <input type="text" class="form-control" id="name" name="name" required>
    </div>
    <div class="form-group">
        <label for="email">{{ translations['email'] }}</label>
        <input type="email" class="form-control" id="email" name="email" required>
    </div>
    <div class="form-group">
        <label for="subject">{{ translations['subject'] }}</label>
        <input type="text" class="form-control" id="subject" name="subject">
    </div>
    <div class="form-group">
        <label for="message">{{ translations['message'] }}</label>
        <textarea class="form-control" id="message" name="message" rows="5" required></textarea>
    </div>
    <button type="submit" class="btn btn-primary">{{ translations['send'] }}</button>
</form>
{% endblock %}
