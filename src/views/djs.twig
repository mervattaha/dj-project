{% extends 'base.twig' %}

{% block content %}
    <div class="container mt-5">
        <h1>DJs in {% if city %}{{ city }}{% else %}{{ country }}{% endif %}</h1>
        {% if djs is not empty %}
            <div class="row">
                {% for dj in djs %}
                    <div class="col-md-4">
                        <div class="card mb-4">
                            <img src="{{ dj.image }}" class="card-img-top" alt="{{ dj.name }}">
                            <div class="card-body">
                                <h5 class="card-title">{{ dj.name }}</h5>
                                <p class="card-text"><strong>Genre:</strong> {{ dj.genre }}</p>
                                <p class="card-text"><strong>Price:</strong> ${{ dj.price }}</p>
                                <p class="card-text">{{ dj.description }}</p>
                                <a href="#" class="btn btn-primary">Book Now</a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <p>No DJs found in this location.</p>
        {% endif %}
    </div>

    <!-- عرض المدن القريبة -->
    <div class="container mt-5">
        <h2>Nearby Cities</h2>
        {% if cities is not empty %}
            <ul class="list-group">
                {% for city in cities %}
                    <li class="list-group-item">
                        <a href="/djs/by-city/{{ city.city_name }}">{{ city.city_name }}</a>
                    </li>
                {% endfor %}
            </ul>
        {% else %}
            <p>No nearby cities available.</p>
        {% endif %}
    </div>
    {% if cities is defined %}
    <h2>Nearby Cities</h2>
    <ul>
        {% for city in cities %}
            <li>{{ city.city_name }} - {{ city.distance }} km</li>
        {% endfor %}
    </ul>
{% else %}
    <p>No cities data available.</p>
{% endif %}
{% endblock %}
