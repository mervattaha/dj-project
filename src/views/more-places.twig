{% extends 'base.twig' %}

{% block content %}
<div class="container">
    <h1 class="text-center mb-4">{{ translations['discover_djs'] }}</h1>
    <h2 class="text-center mb-4">{{ translations['explore_djs'] }}</h2>
    <p class="lead text-center mb-4">{{ translations['explore_talented_djs'] }}</p>

    <!-- Search Form -->
    <div class="row">
        <div class="col-md-12 mb-3">
            <form action="/search-djs" method="GET" class="search-form">
                <input type="text" name="query" placeholder="{{ translations['search_placeholder'] }}" class="search-input" value="{{ search_query }}">
                <button type="submit" class="search-button">{{ translations['find_djs'] }}</button>
            </form>
        </div>
    </div>

    <h1>{{ translations['search_results'] }}</h1>

      <!-- Nearby Cities Section -->
    <div class="container">
        <h1>Nearby Cities</h1>
        <ul class="list-unstyled">
            {% if cities is empty %}
                <li>No nearby cities found.</li>
            {% else %}
                {% for city in cities %}
                    <li class="d-flex justify-content-between align-items-center mb-2">
                        <a href="/locations/{{ city.city_slug }}" class="text-dark text-decoration-none" style="font-weight: 500;">
                            <i class="fas fa-map-marker-alt me-2"></i> {{ city.city_name }}
                        </a>
                        <span class="badge bg-primary rounded-pill" style="font-size: 0.85rem;">
                            {{ city.distance|number_format(2) }} km
                        </span>
                    </li>
                {% endfor %}
            {% endif %}
        </ul>
    </div>
<!-- Top Locations Section -->
    <div class="container mt-5">
        <h2>Top Locations</h2>
        <ul class="list-unstyled">
            {% for location in topLocations %}
                <li>
                    <a href="/locations/{{ location.city_slug }}" class="text-dark text-decoration-none">
                        <i class="fas fa-map-marker-alt me-2"></i> {{ location.city_name }}
                    </a>
                </li>
            {% endfor %}
        </ul>
    </div>

    <!-- Countries Section -->
    <div class="container mt-5">
        <h2>Countries</h2>
        <ul class="list-unstyled">
            {% for country in countries %}
                <li>
                    <a href="/countries/{{ country.country_slug }}" class="text-dark text-decoration-none">
                        {{ country.country_name }}
                    </a>
                </li>
            {% endfor %}
        </ul>
    </div>
</body>
    <!-- Display Country Cards -->
    <div class="d-flex flex-wrap justify-content-center mb-5">
        {% for country in countries %}
            <div class="country-card mx-2 mb-4" style="flex: 1 1 250px; max-width: 250px;">
                <a href="/locations/{{ country.country_code }}" class="text-decoration-none">
                    <div class="card border-light shadow-sm">
                        <div class="card-body d-flex align-items-center">
                            <i class="fas fa-globe fa-2x me-3"></i>
                            <div>
                                <h5 class="card-title mb-1">{{ country.country_name }}</h5>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
        {% endfor %}
    </div>
{% endblock %}
