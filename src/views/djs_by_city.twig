{% extends 'base.twig' %}

{% block content %}
<div class="container">
    <h1 class="text-center mb-4">DJs in {{ cityCode }}</h1>
    <div class="d-flex flex-wrap justify-content-center">
        {% if djs is not empty %}
            {% for dj in djs %}
                <div class="card border-light shadow-lg mx-2 mb-4" style="flex: 1 1 280px; max-width: 280px;">
                    <div class="card-body">
                        <h5 class="card-title mb-2">{{ dj.name }}</h5>
                        <p class="card-text mb-3">
                            <strong>Specialization:</strong> {{ dj.specialization }}
                        </p>
                        <!-- يمكنك إضافة رابط أو زر لتفاصيل DJ هنا -->
                        <a href="/dj?id={{ dj.id }}" class="btn btn-outline-primary">View Profile</a>
                    </div>
                </div>
            {% endfor %}
        {% else %}
            <p class="text-center">No DJs available in this city.</p>
        {% endif %}
    </div>
</div>
{% endblock %}
