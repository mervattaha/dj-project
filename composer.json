{
    "require": {
        "twig/twig": "^3.0",
        "j4mie/idiorm": "^1.5",
        "bramus/router": "^1.6",
        "twig/extra-bundle": "^3.11",
        "twig/intl-extra": "^3.11",
        "pimple/pimple": "^3.5"
    },
    "autoload": {
        "psr-4": {

            "App\\Controllers\\": "src/controllers/",
            "App\\Repositories\\": "src/Repositories/",
            "App\\Models\\": "src/models/",
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "optimize-autoloader": true
    }
}
